    <script>
     let toggle = document.getElementById('flexSwitchCheckDefault');
      let withGst = document.querySelectorAll('.with-gst');
      let withoutGst = document.querySelectorAll('.without-gst');

      toggle.addEventListener('change', () => {
        if(toggle.checked) {
          withGst.forEach((element) => {
            element.style.display = 'block';
          });
          withoutGst.forEach((element) => {
            element.style.display = 'none';
          });
        } else {
          withGst.forEach((element) => {
            element.style.display = 'none';
          });
          withoutGst.forEach((element) => {
            element.style.display = 'block';
          });
        }
      });
    </script>
